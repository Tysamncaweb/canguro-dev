<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="open_product_imei_view_form" model="ir.ui.view">
        <field name="name">open.product.imei.view.form</field>
        <field name="model">imei.number</field>
        <field name="arch" type="xml">
            <form string="IMEI Form">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. 010928/00/389023/3"/>
                        </h1>
                    </div>
                    <group col="4">
                        <field name="sold"/>
                        <field name="product_id"/>
                        <field name="ref"/>
                        <field name="company_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="open_product_imei_view_tree" model="ir.ui.view">
        <field name="name">open.product.imei.view.tree</field>
        <field name="model">imei.number</field>
        <field name="arch" type="xml">
            <tree string="IMEI tree">
                <field name="name"/>
                <field name="active"/>
                <field name="sold"/>
                <field name="product_id"/>
                <field name="ref"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="action_product_imei_view" model="ir.actions.act_window">
        <field name="name">IMEI Number</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">imei.number</field>
        <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('open_product_imei_view_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('open_product_imei_view_form')})]"/>
        <!-- <field name="search_view_id" ref="search_product_lot_filter"/> -->
        <field name="context">{'search_default_group_by_product': 1}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
                IMEI number
          </p><p>
            You can add your IMEI code by each smartphone that you sell.
          </p>
        </field>
    </record>

</odoo>