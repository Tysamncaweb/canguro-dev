<?xml version="1.0" encoding="utf-8"?>


<odoo>
	<record id="view_picking_form" model="ir.ui.view">
		<field name="name">view.picking.form.inherit</field>
		<field name="model">stock.picking</field>
		<field name="inherit_id" ref="stock.view_picking_form"/>
		<field name="arch" type="xml">
			<xpath expr="//group[@name='other_infos']" position="after">
				<group>
					<field name="security_bag"/>
					<field name="insurance"/>
				</group>
			</xpath>

			<xpath expr="//button[@name='do_print_picking']" position="replace">
				<!-- <button 
					name="do_print_picking" 
					string="PRINT" 
					groups="stock.group_stock_user" 
					type="object" 
					attrs="{'invisible': ['|', 
					('state', 'not in', ('assigned', 'partially_available')), 
					('is_locked', '=', False)]}"/> -->
			</xpath>

			<xpath expr="//button[@name='%(stock.action_report_delivery)d']" position="replace">
				<button 
					name="do_print_picking"
					string="PRINT" 
					attrs="{'invisible': 
					['|', ('state', '!=', 'done'), ('is_locked', '=', False)]}" 
					type="object" 
					groups="base.group_user"/>
			</xpath>
		</field>
	</record>

</odoo>
