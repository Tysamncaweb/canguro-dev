<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="template_shipping_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                    <div class="header">
                        <div class="row">
                            <div class="col-12">
                                <table class="table table-sm table-borderless">
                                    <tr>
                                        <td class="text-center">
                                            <!-- <img t-attf-src="data:image/*;base64,{{o.company_id.logo}}" style="width:120px; height:120px;"/>                             -->
                                        </td>
                                        <td class="text-center">
                                            <h3 style="margin-top:40px;">Shipping Report</h3>
                                        </td>
                                        <td class="text-center">
                                            <!-- <span t-field="o.name"/> -->
                                        </td>
                                    </tr>
                                 </table>
                            </div>
                      </div> 
                    </div>
                    <div class="page">
                       <table class="table table-sm">
                            <thead>
                                <th>Date</th>
                                <th>Adviser/Seller</th>
                                <th>Customer</th>
                                <th>weight</th>
                                <th>Security Bag</th>
                                <th>Insurance</th>
                                <th>Destinity</th>
                                <th>Parcel Service</th>
                            </thead>
                            <tbody>
                                 <tr t-foreach="shipping_report(o, data['form']['date_from'], data['form']['date_to'])" t-as="shipping">
                                    <td class="text-center"><span t-esc="shipping['date']"/></td>
                                    <td lass="text-center"><span t-esc="shipping['adviser']"/></td>
                                    <td lass="text-center"><span t-esc="shipping['customer']"/></td>
                                    <td lass="text-center"><span t-esc="shipping['weight']"/></td>
                                    <td lass="text-center"><span t-esc="shipping['security_bag']"/></td>
                                    <td lass="text-center"><span t-esc="shipping['insurance']"/></td>
                                    <td lass="text-center"><span t-esc="shipping['destinity']"/></td>
                                    <td lass="text-center"><span t-esc="shipping['parcel_service']"/></td>
                                </tr>
                            </tbody>
                       </table>
                    </div>
                    <div class="footer">
                        soy el footer
                    </div>
                </t>
            </t>
        </t>
    </template>



    <report 
        id="action_shipping_report"
        string="Shipping Report"
        model="stock.picking"
        report_type="qweb-pdf"
        name="stock_extended.template_shipping_report"
        file="stock_extended.template_shipping_report"
        menu="False"
        paperformat="canguro_internal_transfer"
    />
<!-- attachment_use="True"
        attachment="'ShippingReport'+'.pdf'" -->
</odoo>
